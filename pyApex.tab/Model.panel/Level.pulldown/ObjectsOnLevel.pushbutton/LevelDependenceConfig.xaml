<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set options for Level Dependence:" Height="300" Width="500" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center">
    <StackPanel Margin="20,10,20,20" HorizontalAlignment="Stretch">
        <DockPanel>
            <StackPanel>
                <Label x:Name="label1" Content="List of exceptions (split with , )"/>
                <TextBox x:Name="exceptions" Height="100" TextWrapping="Wrap"/>

                <Label x:Name="label2" Content="Limit of IDs to show (0 = unlimited)" Margin="0,10,0,0"/>
                <TextBox x:Name="limit" Height="23" Width="100" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0"
                 PreviewTextInput="NumberValidationTextBox"/>
            </StackPanel>
        </DockPanel>
        <StackPanel>
            <Button Margin="0,20,0,0" Click="save_options" Content="Save Options"/>
        </StackPanel>
    </StackPanel>
</Window>
